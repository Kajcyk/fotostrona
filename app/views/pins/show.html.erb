<div class="panel panel-default">
  <div class="panel-body">
    <p>
      <%= image_tag @pin.image.url(:medium) %><br />
      <strong>Opis:</strong>
      <%= @pin.description %>
    </p>

    </div>
  <% if @pin.user == current_user %>
    <div class="panel-footer"><%= link_to 'Edycja', edit_pin_path(@pin) %></div>
  <% end %>
  <div class="panel-footer"><%= link_to 'Wstecz', pins_path %></div>
</div>
